@model List<WebApplication01.Data.Entities.CategoryEntity>

<h1 class="text-center">оберіть потрібну категорію</h1>

<div class="container">
    <a asp-action="Create" class="btn btn-success"><link href="#" rel="stylesheet" />Додати</a>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card" style="width: 100%;">
                    <img src="/uploading/@item.Image" class="card-img-top" alt="@item.Name">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <a href="#" data-detail="@item.Id" class="btn btn-primary">Детальніше</a>
                        <a href="#" class="btn btn-danger" data-detail="@item.Id" data-delete="@item.Name">Видалити</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



<div class="modal" id="modalDelete" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Видалення категорії товару</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Ви впевнені, що хочете видалити категорію <span id="categoryName"></span>?</p>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" id="confirmDelete" method="post" style="display:inline;">
                    <input type="hidden" name="id" id="categoryIdToDelete" />
                    <button type="submit" class="btn btn-primary">Видалити</button>
                    @Html.AntiForgeryToken()
                </form>
            
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Скасувати</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            var modalDelete = new bootstrap.Modal(document.getElementById('modalDelete'));
            let categoryIdToDelete = null;

            document.querySelectorAll('[data-delete]').forEach(btn => {
                btn.addEventListener("click", function (event) {
                    event.preventDefault();
                    const categoryName = this.getAttribute('data-delete');
                    categoryIdToDelete = this.getAttribute('data-detail');
                    document.getElementById('categoryName').textContent = categoryName;		
                    
                    document.getElementById('categoryIdToDelete').value = categoryIdToDelete;
                    modalDelete.show();
                });
            });

            
            
        });
    </script>
}

