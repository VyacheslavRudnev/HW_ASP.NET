@model WebApplication01.Models.Category.CategoryEditViewModel // Підключаємо модель

<h1 class="text-center">Редагувати категорію</h1> @*Заголовок сторінки*@

<div class="container">
    <div class="row">
        <form method="post" class="col-md-6 offset-md-3" enctype="multipart/form-data"> @*Форма для редагування категорії*@
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Назва категорії</label>
                <input type="text" class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Опис категорії</label>
                <textarea class="form-control" asp-for="Description"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="Photo" class="form-label">Оновити зображення</label>
                <input class="form-control" type="file" asp-for="Photo">
            </div>
            
            @if (!string.IsNullOrEmpty(Model.ExistingImage))    // Перевірка на наявність зображення
            {
                <div class="mb-3">  
                    <label>Поточне зображення:</label>
                    <img src="/uploading/150_@Model.ExistingImage" alt="@Model.Name" style="width: 150px; height: 150px;" />
                </div>
            }

            <button type="submit" class="btn btn-primary">Зберегти</button>
            <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />    @*підключення скріпту валідації*@
}
