@model WebApplication01.Models.Category.CategoryEditViewModel

<h1 class="text-center">Редагувати категорію</h1>

<div class="container">
    <div class="row">
        <form method="post" class="col-md-6 offset-md-3" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input type="text" class="form-control" asp-for="Name">
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea class="form-control" asp-for="Description"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="Photo" class="form-label">Оновити зображення</label>
                <input class="form-control" type="file" asp-for="Photo">
            </div>

            @if (Model.ExistingImage != null)
            {
                <div class="mb-3">
                    <img src="/uploading/@Model.ExistingImage" alt="@Model.Name" style="width: 100px;" />
                </div>
            }

            <button type="submit" class="btn btn-primary">Зберегти</button>
        </form>
    </div>
</div>